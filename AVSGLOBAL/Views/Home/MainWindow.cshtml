

@{
  ViewBag.Title = "Demonstrating JWTs in ASP.NET Core MVC 5";
}

<script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
<link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />

<div id="main">
  <div class="row">
    <div class="content-wrapper-before gradient-45deg-indigo-purple"></div>
    @Html.Partial("Partial/TEMPLATE/Top")
    <div class="col s12">
      <div class="container">
        <div class="section">
          <div class="card">
            <div id="root" class="card-content partialview">
              
            </div>

            <form method="post" action="~/fileupload" class="dropzone" id="uploadForm" enctype="multipart/form-data">
              <div class="fallback">
                <input name="file" type="file" multiple />
              </div>
            </form>

            <script>
             Dropzone.options.uploadForm = {
                                    maxFilesize: 1.5,//maksimum dosya boyutu 1.5 tanımladık
                                    maxFiles: 50,
                                    /* paramName: "files", //paramName: "file" //default-değeri "file"dır. back-end kullandığımız parametre adı ile aynı olmalıdır.  
                                    maxFilesize: 3.0, 
                                    maxFiles: 4,
                                    parallelUploads: 10000,
                                    uploadMultiple: true,
                                    autoProcessQueue: false, */
                                    init: function () {
                                        this.on("success", function (file, response) {
                                            //var obj = jQuery.parseJSON(response)
                                            //console.log(obj);
                                            debugger;
                                            console.log(response);
                                        })
                                    },
                                    accept: function (file, done) {

                                        console.log(file);                                     
                                        done();
                                    }                                      
                                  };
          </script>

          </div>
        </div>
        @Html.Partial("Partial/TEMPLATE/RightMenu")
        @Html.Partial("Partial/TEMPLATE/BottomMenu")
      </div>
      <div class="content-overlay"></div>
    </div>
  </div>
</div>
@Html.Raw(ViewBag.Library)